<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- 参照 闲鱼 -->
    <style name="FishAppTheme.InitScreen" parent="@style/FishAppTheme">
        <item name="android:windowBackground">@drawable/drawable_init_cover</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/NoAnimActivity</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="FishAppTheme" parent="@style/FishAppBaseTheme" />

    <style name="NoAnimActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="BaseActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
    </style>

    <style name="FishAppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/BaseActivityAnimation</item>
    </style>


    <!-- 参照 QQ音乐 -->
    <style name="QQMusicTheme.InitScreen" parent="@style/oa" />

    <style name="oa" parent="@style/o_">
        <item name="android:windowBackground">@drawable/splashstatic_first</item>
    </style>
    <!-- override by v28/styles.xml -->
    <style name="o_" parent="@style/os">
        <item name="android:windowBackground">@drawable/splashstatic</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="os" parent="@style/nw">
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:imageButtonStyle">@android:style/Widget.ImageButton</item>
        <item name="android:listViewStyle">@style/gi</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="gi" parent="@android:style/Widget.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>

    <style name="nw" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:textColorHintInverse">@color/abc_hint_foreground_material_dark</item>
        <item name="android:textColorHint">@color/abc_hint_foreground_material_light</item>
        <item name="android:textColorLink">?android:colorAccent</item>
        <item name="android:textColorLinkInverse">?android:colorAccent</item>
    </style>

</resources>